- content_tag_for :div, role do
  %ul{:class => 'attributes'}
    %li
      %strong Name:
      =h role.name
    %li
      %strong Description:
      =h role.description
    %li
      %strong Deleted:
      =h role.deleted
    = link_to 'Show', role
    = link_to 'Edit', edit_role_path(role)
    = link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete