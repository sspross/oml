%h2= "Tag \"#{@tag.to_param}\""
- content_tag_for :div, @tag do
  %ul{:class => 'attributes'}
    %li
      %strong Name:
      =h @tag.name
    %li
      - if @tag.image
        = link_to(image_tag(@tag.image.public_filename(:thumb)), @tag.image.public_filename, :class => 'image')
%ul{:class => 'menu'}
  %li= link_to 'Edit', edit_tag_path(@tag)
  %li= link_to 'Back', tags_path