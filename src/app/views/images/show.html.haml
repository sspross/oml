%h2= "Image \"#{@image.to_param}\""
- content_tag_for :div, @image do
  = link_to(image_tag(@image.public_filename(:thumb)), @image.public_filename, :class => 'image')
  %ul{:class => 'attributes'}
    %li
      %strong Description:
      =h @image.description
%ul{:class => 'menu'}
  %li= link_to 'Edit', edit_image_path(@image)
  %li= link_to 'Back', images_path